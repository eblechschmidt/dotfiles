# vi/vim/nvim
alias vi="nvim"
alias vim="nvim"

# git
alias ga="git add"
alias gc="git commit -m"
alias gs="git status"
alias gsv="git status -v"
alias gd="git diff"
alias gp="git push"

# chezmoid
alias cm="chezmoi"
alias cmr="chezmoi re-add"
alias cmcd="chezmoi cd"

# ls
alias ls="ls --color=auto"
alias la="ls -A"
alias ll="ls -lAh"

# bash
alias :wq="exit"
