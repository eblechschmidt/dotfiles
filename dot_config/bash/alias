# vi/vim/nvim
alias vi="nvim"
alias vim="nvim"

# mkdir
alias mkdir="mkdir -p"

# git
alias ga="git add"
alias gc="git commit -m"
alias gs="git status"
alias gsv="git -c color.status=always -c color.diff=always status -v | less -R"
alias gd="git diff"
alias gp="git push"

# chezmoid
alias cm="chezmoi"
alias cmr="chezmoi re-add"
alias cmcd="chezmoi cd"

# ls or exa
if _have exa; then
  alias ls="exa --color=always --group-directories-first --icons"
  alias la="exa -a --color=always --group-directories-first --icons"
  alias ll="exa -lah --color=always --group-directories-first --icons"
  alias lt='exa -aT --color=always --group-directories-first --icons'
else
  alias ls="ls --color=auto"
  alias la="ls -A"
  alias ll="ls -lAh"
fi
# bash
alias :wq="exit"

# ansible
alias ap="ansible-playbook -K"

# bat
alias bat="bat --theme=Nord"

# mpv
alias  mpv="mpv --ytdl-format=\"bestvideo[height<=?1080][fps<=?30]+bestaudio/best\" -fs --hwdec=auto --hwdec-codecs=all --override-display-fps=25";

